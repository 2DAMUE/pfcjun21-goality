<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rl"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="32dp"
    tools:context=".AddResultado">

    <LinearLayout
        android:id="@+id/llTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/addPartidoTitulo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Ingresar"
            android:textColor="@color/background3"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/addPartidoTitulo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addPartidoTitulo1"
            android:fontFamily="@font/montserrat_bold"
            android:text=" resultado"
            android:textColor="@color/background3"
            android:textSize="30sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="156dp"
        android:layout_height="360dp"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_activity_5"
        android:padding="24dp">

        <ImageView
            android:id="@+id/ivEquipo1"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tvLocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivEquipo1"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="Local" />


        <EditText
            android:id="@+id/etResultado1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:hint="0"
            android:inputType="number"
            android:textSize="64sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="156dp"
        android:layout_height="360dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_activity_5"
        android:padding="24dp">

        <ImageView
            android:id="@+id/ivEquipo2"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tvVisitante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivEquipo2"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="Local" />

        <EditText
            android:id="@+id/etResultado2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:hint="0"
            android:inputType="number"
            android:textSize="64sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llBotonesAddPartido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl2"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/cancel2"
            android:fontFamily="@font/montserrat_bold"
            android:onClick="cancelar"
            android:text="Cancelar"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnAceptar"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_bold"
            android:onClick="aceptar"
            android:text="Aceptar"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>