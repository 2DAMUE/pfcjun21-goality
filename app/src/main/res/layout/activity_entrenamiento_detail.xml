<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".EntrenamientoDetailActivity">


    -

    <LinearLayout
        android:id="@+id/llTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp">

        <TextView
            android:id="@+id/partidoDetailTitulo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Mis "
            android:textColor="@color/background3"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/addPartidoTitulo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/partidoDetailTitulo1"
            android:fontFamily="@font/montserrat_bold"
            android:text="entrenamientos"
            android:textColor="@color/background3"
            android:textSize="30sp" />

    </LinearLayout>


    -

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llTitulo"
        android:background="@drawable/bg_activity_4c"
        android:elevation="8dp"
        android:padding="40dp">

        <TextView
            android:id="@+id/tvFechaEntrenamietoDlabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvVisitante"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="Fecha:" />

        <TextView
            android:id="@+id/tvFechaEntrenamietoD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvFechaEntrenamietoDlabel"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:letterSpacing=".2"
            android:text="29/12/2019"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/tvHoraEntrenamietoDlabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvFechaEntrenamietoD"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="Hora:" />

        <TextView
            android:id="@+id/tvHoraEntrenamietoD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHoraEntrenamietoDlabel"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:letterSpacing=".2"
            android:text="00:00"
            android:textSize="32sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>

    </RelativeLayout>

</RelativeLayout>