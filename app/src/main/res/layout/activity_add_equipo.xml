<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".AddJugador">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivLogoEquipo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tvCambiarFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivLogoEquipo"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center_horizontal"
            android:text="Pulsa aquí para cambiar el logo del equipo"
            android:textColor="@color/background3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tvCambiarFoto"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_activity"
            android:padding="56dp">

            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:hint="Nombre del equipo" />

            <TextView
                android:id="@+id/tvGenero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etNombre"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="Género" />

            <Button
                android:id="@+id/btnGenero"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvGenero"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat"
                android:text="Selecciona el género" />

            <TextView
                android:id="@+id/tvEdadEquipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnGenero"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="Rango de edad" />

            <Button
                android:id="@+id/btnEdadEquipo"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvEdadEquipo"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat"
                android:text="Selecciona la edad" />

            <LinearLayout
                android:id="@+id/llBotonesAddPartido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnEdadEquipo"
                android:layout_marginTop="40dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/cancel2"
                    android:fontFamily="@font/montserrat_bold"
                    android:onClick="cancelar"
                    android:text="Cancelar"
                    android:textColor="@color/white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAceptar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/montserrat_bold"
                    android:onClick="aceptar"
                    android:text="Aceptar"
                    android:textColor="@color/white" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>